<div class="bg-dark">

  <div class="container">
    <div class="city-grid">
          <% @flats.each do |flat| %>
            <div class="city-box">
              <img class="img-menu" src="<%= flat.coverBox %>">
              <p class="menu-title"><%= link_to flat.title, flat_path(flat) %></p>
              <div class="">
                <p class="menu-price">$ <%= flat.price %></p>
              </div>
            </div>
          <% end %>
        </div>
  </div>
</div>
